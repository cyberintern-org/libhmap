{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "libhmap",
  "version": "0.1.0",
  "description": "standard library for the cyberintern's Hyper Media Application Platform (HMAP) workgroup, part of the WWW workgroup",
  "keywords": [
    "hypermedia",
    "www",
    "web"
  ],
  "author": "cyberintern",
  "license": "LGPL-2.1-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyberintern-org/libhmap.git"
  },
  "files": [
    "README.md",
    "LICENSE"
  ],
  "scripts": {
